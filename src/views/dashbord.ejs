                <div class="card">
                  <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                      <div>
                        <h3 ><%=totalUsers%></h3>
                        <p class="mb-0">Total users</p>
                      </div>
                      <div class="align-self-center">
                        <i class="far fa-user  fa-3x" style="color: rgb(240, 98, 122);"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-xl-4 col-sm-6 col-12 mb-4">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                      <div>
                        <h3 ><%=totalProducts%></h3>
                        <p class="mb-0">Total products</p>
                      </div>
                      <div class="align-self-center">
                        <i class="fas fa-dolly  fa-3x" style="color: rgb(252, 252, 62);"></i>
